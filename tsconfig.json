{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "target": "es5",                          
    "lib": ["es6"],
    "module": "commonjs",     
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                          
    "baseUrl": "./",                       
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  }, 
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
